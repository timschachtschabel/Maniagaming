@{
    ViewData["Title"] = "Log in";
}

<div class="login">
    <form class="border border-light p-5" action="/" method="post">
        <p class="h4 mb-4 text-center">Login</p>

        <input type="email" class="form-control mb-4" name="name" value="" placeholder="Email" />
        <input type="password" class="form-control mb-4" name="name" value="" placeholder="Password" />

        <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

        <div class="signin text-center">
            <p>
                Don't have an account yet?
                <a asp-area="" asp-controller="Home" asp-action="Register">Register</a>
            </p>
        </div>
    </form>
</div>
