@{
    ViewData["Title"] = "Register";
}

<div class="login">
    <form class="border border-light p-5" action="/" method="post">
        <p class="h4 mb-4 text-center">Register</p>

        <input type="text" class="form-control mb-4" name="username" value="" placeholder="Username" />
        <input type="email" class="form-control mb-4" name="mail" value="" placeholder="Email" />
        <input type="password" class="form-control mb-4" name="password" value="" placeholder="Password" />

        <button class="btn btn-info btn-block my-4" type="submit">Register account</button>

    </form>
</div>
